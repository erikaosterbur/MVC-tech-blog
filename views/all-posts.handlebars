{{#each posts as |post| }}
    <div class="card col-10 p-4 m-auto" href="single-post">
        <div class="card-body">
            <a href="/posts/{{post.id}}"><h5 class="card-title">{{post.title}}</h5></a>
            <h6 class="card-subtitle">Posted by {{user.username}} on {{format_date post.date_created}}</h6>
            <p class="card-text">{{post.body}}</p>
        </div>
    </div>
{{/each}}