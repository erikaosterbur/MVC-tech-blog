<div class="card col-10 p-4 m-auto">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <h6 class="card-subtitle">Posted by {{user.username}} on {{format_date post.date_created}}</h6>
        <p class="card-text">{{post.body}}</p>
    </div>
</div>

<div>
    <form>
        <div class="form-group col-10 p-4 m-auto">
            <label for="commentBody">Leave a comment</label>
            <textarea class="form-control" id="comment-body" rows="3"></textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-dark col-3" id="comment-form">Submit Comment</button>
        </div>
    </form>
</div>


<script src="../public/js/comment.js"></script>
