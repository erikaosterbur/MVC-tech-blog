<div class="card col-10 p-4 m-auto">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <h6 class="card-subtitle">Posted by {{user.username}} on {{format_date post.date_created}}</h6>
        <p class="card-text">{{post.body}}</p>
    </div>
</div>

{{#if ?}}
<div class="card col-8 p-4 m-auto">
    <div class="card-body">
        {{#each post.Comments}}
        <p class="card-text">{{user.username}}</p>
        <p class="card-text">{{format_date comment.date_created}}</p>
        <p class="card-text">{{comment.body}}</p>
        {{/each}}
    </div>
</div>
{{/if}}

<div>
    <form id="comment-form">
        <div class="form-group col-10 p-4 m-auto">
            <label for="commentBody">Leave a comment</label>
            <textarea class="form-control" id="comment-body" rows="3"></textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-dark col-3">Submit Comment</button>
        </div>
    </form>
</div>


<script src="/js/comment.js"></script>
