<form class="col-10 p-4 m-auto">
        <h4 class="form group col-5 m-auto">EDIT POST</h4>
        <div class="form-group">
            <label for="postTitle">Title:</label>
            <textarea class="form-control" id="post-title" rows="1">{{post.title}}</textarea>
        </div>
        <div class="form-group">
            <label for="postBody">Content:</label>
            <textarea class="form-control" id="post-body" rows="3">{{post.body}}</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-dark col-4" id="edit-post-form">Update Post</button>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-danger col-4" id="delete-post-form">Delete Post</button>
        </div>
</form> 

<script src="../public/js/edit.js"></script>