<form class="col-10 p-4 m-auto" id="edit-post-form">
        <input type="hidden" id="edit-post-id" value="{{post.id}}"/>
        <h4 class="form group col-5 m-auto">EDIT POST</h4>
        <div class="form-group">
            <label for="postTitle">Title:</label>
            <textarea class="form-control" id="edited-title" rows="1">{{post.title}}</textarea>
        </div>
        <div class="form-group">
            <label for="postBody">Content:</label>
            <textarea class="form-control" id="edited-body" rows="3">{{post.body}}</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-dark col-4">Update Post</button>
        </div>
</form> 

<div class="d-flex justify-content-center">
    <button class="btn btn-danger col-3" id="delete-post-form">Delete Post</button>
</div>

<script src="/js/edit.js"></script>